<h1>Longest Word Game</h1>

<p><%= @letters.join('  ').upcase%></p>
<form action="/score" method="post" class="form-group">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @letters.join('') %>
  <input type="text" name="word" class="form-control" placeholder="type your best guess">
<!--   <input id="tags_list" name="letters" type="hidden" /> -->
  <input type="submit" value="Play!" class="btn btn-primary">
</form>
